{
  "name": "recipe-manager-5000",
  "version": "0.20.0",
  "homepage": "https://branneman.github.io/recipe-manager-5000/",
  "type": "module",
  "scripts": {
    "start": "npx stmux -n -M -- [ 'vite' .. 'vitest' ]",
    "build": "vite build",
    "test": "vitest",
    "postversion": "git push && git push --tags",
    "deploy": "npm version minor -m \"chore: Release version %s\" && npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "@date-io/luxon": "^3.2.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@fontsource/roboto": "^5.2.5",
    "@mui/icons-material": "^7.0.1",
    "@mui/material": "^7.0.1",
    "@mui/x-date-pickers": "^8.3.0",
    "caniuse-lite": "^1.0.30001707",
    "firebase": "^11.5.0",
    "luxon": "^3.6.1",
    "ramda": "^0.30.1",
    "react": "^18.2.0",
    "react-device-detect": "^2.2.2",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.0.3",
    "react-router-dom": "^7.4.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@vitejs/plugin-react": "^4.2.1",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "stmux": "^1.8.10",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "./util/(.*)$",
      "./pages/(.*)$",
      "./components/(.*)$",
      "^@mui/material/(.*)$",
      "^@mui/icons-material/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-dnd|react-dnd|dnd-core)).*\\.js$"
    ]
  }
}
